{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "strict": true,
    "baseUrl": "./"
  },
  "exclude": ["**/*.test.ts", "dist"],
  "include": ["src/**/*"]
}
